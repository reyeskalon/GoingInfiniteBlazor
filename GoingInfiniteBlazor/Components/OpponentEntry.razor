@inject NavigationManager NavigationManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<input @bind="opponent" class="shadow-sm appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline font-bold" type="text" />
<BlueButton OnClickCallback=StartMatch Text="Start Match"></BlueButton>


@code {

    private string opponent = "";

    private async void StartMatch()
    {
        await LocalStorage.SetItemAsync(Constants.OPPONENT_NAME, opponent);

        NavigationManager.NavigateTo("/life-tracker");
    }
}